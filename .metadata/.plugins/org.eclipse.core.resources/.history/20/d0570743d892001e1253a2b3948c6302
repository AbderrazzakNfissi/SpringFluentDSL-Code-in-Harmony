grammar org.xtext.spring.fluent.SpringFluentDSL with org.eclipse.xtext.common.Terminals

generate springFluentDSL "http://www.xtext.org/spring/fluent/SpringFluentDSL"

Model:
  prefix=Prefix
  appName=AppName
  dependencies=Dependencies
  entities=Entities;

Prefix:
  {Prefix} 'prefix:' prefix=STRING;

AppName:
  {AppName} 'app_name:' appName=STRING;

Dependencies:
  {Dependencies} 'dependencies' '{'
    dependencies+=Dependency (',' dependencies+=Dependency)*
  '}';

enum DependencyType:
  SpringDataJpa | SpringWeb | Lombok | MySQLDriver | DevTools;

Dependency:
  {Dependency} dependency=DependencyType;

Entity:
  {Entity} 'entity' name=ID ('extends' superType=[Entity|ID])? '{'
    operations+=Operation*
  '}';

Operation:
  {Operation} 'ops:' ops=STRING;

Relation:
  relationType=('mto' | 'otm') target=[Entity|ID];

ModelElement:
  Entity | Relation;

Entities:
  {Entities} 'entities' '{'
    elements+=ModelElement*
  '}';